<launch>
  <arg name="pointcloud_container_name" default="pointcloud_container"/>
  <arg name="lidar_input_topic" default="/lidar_points" description="incoming LiDAR point cloud topic"/>
  <arg name="imu_input_topic" default="/imu/data" description="incoming IMU topic"/>
  <arg name="gnss_input_topic" default="/fix" description="incoming NavSatFix topic"/>

  <group>
    <push-ros-namespace namespace="sensing"/>

    <!-- LiDAR -->
    <include file="$(find-pkg-share skycity_sensor_kit_launch)/launch/lidar.launch.xml">
      <arg name="pointcloud_container_name" value="$(var pointcloud_container_name)"/>
      <arg name="input_topic" value="$(var lidar_input_topic)"/>
    </include>

    <!-- IMU -->
    <include file="$(find-pkg-share skycity_sensor_kit_launch)/launch/imu.launch.xml">
      <arg name="input_topic" value="$(var imu_input_topic)"/>
    </include>

    <!-- GNSS -->
    <include file="$(find-pkg-share skycity_sensor_kit_launch)/launch/gnss.launch.xml">
      <arg name="input_fix_topic" value="$(var gnss_input_topic)"/>
    </include>

    <!-- Vehicle Velocity Converter  -->
    <include file="$(find-pkg-share autoware_vehicle_velocity_converter)/launch/vehicle_velocity_converter.launch.xml">
      <arg name="input_vehicle_velocity_topic" value="/vehicle/status/velocity_status"/>
      <arg name="output_twist_with_covariance" value="/sensing/vehicle_velocity_converter/twist_with_covariance"/>
    </include>
  </group>
</launch>
