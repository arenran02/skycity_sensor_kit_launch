<launch>
  <arg name="input_topic" default="/imu/data" description="incoming MTI-G-710 topic"/>
  <arg name="output_topic" default="imu_data"/>

  <group>
    <push-ros-namespace namespace="imu"/>

    <node
      pkg="topic_tools"
      exec="relay"
      name="imu_data_passthrough"
      args="$(var input_topic) $(var output_topic)"
      respawn="true"/>
  </group>
</launch>
